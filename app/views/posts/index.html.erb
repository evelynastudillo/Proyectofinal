<p id="notice"><%= notice %></p>

<%= render 'layouts/header' %>
<br>
<br>
<tbody>



  <br>
  <br>

  <div class="container">
    <% @posts.each do |post| %>
    <div class="row">
      <div class="col-8">
        <%= image_tag post.photo_url %>
      </div>

      <div class="col">
        <p id="parraf">
          <%= link_to 'Ver mÃ¡s detalles', post, :class => 'btn btn-outline-success' %>
          <% if can? :edit, post %>
          <%= link_to 'Editar', edit_post_path(post), :class => 'btn btn-outline-danger' %>
          <% if can? :destroy, post %>
          <%= link_to 'Eliminar', post, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-outline-danger' %>
        </p>
        <% end %>
        <% end %>
      </div>
    </div>
    <div >
      <i class="fa fa-heart"></i><%= @post.likes.count %>
    </div>
    <hr>
    <% end %>
  </div>

  <%= link_to 'Crear nuevo Post', new_post_path, :class => 'btn btn-outline-success' %>

</tbody>
