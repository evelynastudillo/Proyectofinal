<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Photo</th>
      <th>Location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>



    <% @posts.each do |post| %>
      <tr>
        <td><%= post.name %></td>
        <td><%= image_tag post.photo.url %></td>
        <td><%= link_to 'Ver', post %></td>
        <td><%= link_to 'Editar', edit_post_path(post) %></td>
        <td>
          <% if can? :destroy, post %>
            <%= link_to 'Eliminar', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
      </tr>

    <% end %>

  </tbody>
</table>

<br>


<%= link_to 'New Post', new_post_path %>
